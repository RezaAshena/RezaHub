@model RezaHub.ViewModels.UserVM
@{
    ViewData["Title"] = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New User</h1>
@using (@Html.BeginForm("Create", "Users"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.User.Name)
        @Html.TextBoxFor(m => m.User.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.Email)
        @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.GroupId)
        @Html.DropDownListFor(m => m.User.GroupId,new SelectList(Model.Groups,"Id","Name"), "Select Group Type",new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button> 
}

